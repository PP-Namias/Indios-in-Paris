<Window x:Class="LoginPage.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LoginPage"
        mc:Ignorable="d"
        Title="Main Menu" Height="700" Width="1200" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop  Color="#093A3E" Offset="1"/>
                <GradientStop  Color="#3AAFB9" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock 
            Text="Main Menu" 
            Margin="20,20,20,620" 
            Foreground="White"
            TextAlignment="Center" 
            FontSize="38"  
            FontFamily="Century">
        </TextBlock>

        <StackPanel Orientation="Horizontal">
            <StackPanel Width="100" HorizontalAlignment="Right" Margin="1100,0,0,0">
                <Button Margin="10 20" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="{x:Null}"
                    ToolTip="Close" x:Name="btnExit1" Click="btnExit_Click1" BorderBrush="#FF3AAFB9" Width="35" Height="35" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Close" Foreground="White" Width="20" Height="20" />
                </Button>
            </StackPanel>
        </StackPanel>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="350">
            <Button Width="300" Height="99" Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" BorderBrush="#093A3E" FontFamily="Century" 
                    Background="#093A3E" Foreground="White" ToolTip="QRReader" x:Name="btnQRReader" 
                    Click="btnQRReader_Click" Content="QR/Bar Code Reader" HorizontalAlignment="Center" FontSize="24"/>
        </StackPanel>
        <TextBlock 
            Text="QR/Bar Code Reader Prototype" 
            Margin="10,225,30,425" 
            Foreground="White"
            TextAlignment="Center" 
            FontSize="38"  
            FontFamily="Century"/>

    </Grid>
</Window>
