        </Grid.Background>

        <TextBlock 
            Text="Main Menu" 
            Margin="20" 
            Foreground="White"
            TextAlignment="Center" 
            FontSize="38"  
            FontFamily="Century">
        </TextBlock>


        
    </Grid>
